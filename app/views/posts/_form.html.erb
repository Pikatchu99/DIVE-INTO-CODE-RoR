<%= form_for @post do |post| %>
<% if @post.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <!-- <h2><<%= @post.errors.count %>error</h2> -->
    <!-- <ul> -->
    <% @post.errors.full_messages.each do |msg| %>
      <%= msg %>
    <% end %>
    <!-- </ul> -->
  </div>
<% end %>

<div class="form-group">
  <label>Titre</label>
  <%= post.text_field :title, class: "form-control" %>
</div>
<div class="form-group">
  <label>Contenu</label>
  <%= post.text_area :content, class: "form-control" %>
</div>
<div class="form-group">
<button type="submit" class="btn btn-primary mt-5">Enregistrer</button>
</div>
<% end %>
